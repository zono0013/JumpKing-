<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".play_JunpKing">



    <LinearLayout
        android:layout_width="729dp"
        android:layout_height="409dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <jp.ac.ritsumei.ise.phy.exp2.is0665ri.jumpking.MySurfaceView
                android:id="@+id/mySurfaceView"
                android:layout_width="729dp"
                android:layout_height="409dp"
                android:onClick="onSurfaceClick" />

            <Button
                android:id="@+id/menue"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:background="#80FF0000"
                android:onClick="onList"
                android:text="≡"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/left"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="30dp"
                android:background="#80FF0000"
                android:onClick="onLeft"
                android:text="⇐"
                app:cornerRadius="0dp" />
            <Button
                android:id="@+id/right"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="150dp"
                android:background="#80FF0000"
                android:onClick="onRight"
                android:text="⇒"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/jump"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="50dp"
                android:background="#80FF0000"
                android:text="Jump"
                app:cornerRadius="50dp"
            />

            <Button
                android:id="@+id/home"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="125dp"
                android:backgroundTint="#A000FF00"
                android:onClick="onExitButtonTapped"
                android:text="ホームへ"
                android:textSize="25dp"
                android:visibility="gone"
                app:cornerRadius="0dp"/>

            <Button
                android:id="@+id/reload"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="200dp"
                android:backgroundTint="#8000FF00"
                android:onClick="onReloadTapped"
                android:text="最初から"
                android:textSize="25dp"
                android:visibility="gone"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/home1"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_gravity="top|right"
                android:layout_marginRight="75dp"
                android:layout_marginTop="275dp"
                android:backgroundTint="#00FF00"
                android:onClick="onExitButtonTapped"
                android:text="ホームへ"
                android:textSize="25dp"
                android:visibility="gone"
                app:cornerRadius="0dp" />
            <Button
                android:id="@+id/reload1"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="275dp"
                android:backgroundTint="#00FF00"
                android:onClick="onReloadTapped"
                android:text="もう一度"
                android:textSize="25dp"
                android:visibility="gone"
                app:cornerRadius="0dp" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
